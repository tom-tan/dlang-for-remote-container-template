{
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "ubuntu-20.04",
      "DC_NAME": "ldc",
      "DC_VERSION": "1.28.1"
    }
  },
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "extensions": ["webfreak.dlang-bundle"],
  "settings": {
    "d.dmdPath": "dmd",
    "d.stdlibPath": [
      // for dmd
      "/dlang/dc/src/druntime/import",
      "/dlang/dc/src/phobos",
      // for ldc and gdc
      "/dlang/dc/import"
    ]
  },
  "remoteUser": "vscode"
}
